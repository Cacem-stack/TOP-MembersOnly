<h1>Posts Index</h1>

<tbody>
  <table>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.username %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
    <% end %>
  </table>
</tbody>

<% if user_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>
